{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"]
}
